---
import Welcome from "../components/Welcome.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <main class="min-h-screen flex flex-col">
        <header class="flex items-center w-full justify-between fixed top-0 left-0 bg-white z-60 pb-35">
            <div class="flex items-center mt-*" >
                <a href="/">
                <svg
                    class="w-24 px-6 py-4 top-0"
                    xmlns="http://www.w3.org/2000/svg"
                    x="0px"
                    y="0px"
                    width="100"
                    height="100"
                    viewBox="0 0 24 24"
                > 
                    <path
                        d="M 12 2.0996094 L 1 12 L 4 12 L 4 21 L 10 21 L 10 14 L 14 14 L 14 21 L 20 21 L 20 12 L 23 12 L 12 2.0996094 z"
                    ></path>
                </svg>
			</a>
			<div class="flex items-center justify-center mt-60 fixed  left-0 w-full bg-white z-50 "> 
				<ul>
					<h3 class="font-playfair text-4xl ml-17">
						Sucursales de 
					  </h3>
					  <h3 class="font-playfair text-4xl">
						Softwave "BarberShop"
					  </h3>

				</ul>
				<div class="w-full border-t border-[#9b9e7d] mt-20 fixed top-40 bg-white "></div>
				

			</div>


                <nav>
                    <ul class="space-x-3 flex">
                        <a class="font-sans px-4 py-3 bg-black text-white rounded hover:bg-[#9b9e7d]" href="/contacto">Contacto</a>
                        <a class="font-sans px-4 py-3 bg-black text-white rounded hover:bg-[#9b9e7d]" href="/servicios">Servicio</a>
                    </ul>
                </nav>
            </div>

            <div class="absolute left-1/2 transform -translate-x-1/2">
                <img
                    class="w-36 mt-8 py-4"
                    src="https://img.freepik.com/vector-gratis/ilustracion-vector-herramientas-peluquero-tijeras-navaja-afeitar-poste-cinta-muestra-texto_74855-10555.jpg?t=st=1743377051~exp=1743380651~hmac=3450503a78ced1cba1dd976e09adbd3546582040ceea83c39ddea5f2abd0eb94&w=1380"
                    alt="logo"
                />
            </div>
        </header>
        
        <section class="mt-65 text-center">
            <h2 class="text-4xl font-playfair mb-10">Escoge una sucursal</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 px-6">
                <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                    <img src="/src/assets/Mutt.jpg" alt="Sucursal MUT" class="w-full h-48 object-cover">
                    <div class="p-4">
                        <h3 class="text-lg font-semibold">BarberShop MUT</h3>
                        <p class="text-[#9b9e7d] font-bold">DIRECCIÓN</p>
                        <p>Avenida Apoquindo 2730, Santiago, Chile</p>
                        <p class="text-[#9b9e7d] font-bold">TELÉFONO</p>
                        <p>972217532</p>
                        <p class="text-[#9b9e7d] font-bold">HORARIOS DE ATENCIÓN</p>
                        <p>Lunes a Jueves: 10:00 - 20:00</p>
                        <p>Viernes y Sábado: 10:30 - 23:00</p>
                        <p>Domingo: 11:00 - 20:00</p>
                    </div>
                </div>
                <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                    <img src="/src/assets/Plaza de armas.jpg" alt="Sucursal Plaza de Armas" class="w-full h-48 object-cover">
                    <div class="p-4">
                        <h3 class="text-lg font-semibold">BarberShop Plaza de Armas</h3>
                        <p class="text-[#9b9e7d] font-bold">DIRECCIÓN</p>
                        <p>Merced 839, Galería Plaza de Armas, Santiago</p>
                        <p class="text-[#9b9e7d]font-bold">TELÉFONO</p>
                        <p>972217532</p>
                        <p class="text-[#9b9e7d] font-bold">HORARIOS DE ATENCIÓN</p>
                        <p>Lunes a Jueves: 10:00 - 20:30</p>
                        <p>Viernes y Sábado: 10:30 - 23:00</p>
                        <p>Domingo: 11:00 - 20:00</p>
                    </div>
                </div>
                <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                    <img src="/src/assets/vespucio.jpg" alt="Sucursal Plaza Vespucio" class="w-full h-48 object-cover">
                    <div class="p-4">
                        <h3 class="text-lg font-semibold">BarberShop Plaza Vespucio</h3>
                        <p class="text-[#9b9e7d] font-bold">DIRECCIÓN</p>
                        <p>Av. Vicuña Mackenna Ote. 7110, La Florida, Santiago</p>
                        <p class="text-[#9b9e7d] font-bold">TELÉFONO</p>
                        <p>972217532</p>
                        <p class="text-[#9b9e7d] font-bold">HORARIOS DE ATENCIÓN</p>
                        <p>Lunes a Jueves: 10:00 - 20:00</p>
                        <p>Viernes y Sábado: 10:30 - 23:00</p>
                        <p>Domingo: 11:00 - 20:00</p>
                    </div>
                </div>
            </div>
        </section>
		</div>
		<br>
		<footer class="bg-[#000000] text-white py-6">
			<div class="container mx-auto flex flex-col md:flex-row justify-between items-center px-6">
				<!-- Sección de redes sociales -->
				<div class="flex space-x-6">
					<a href="https://www.instagram.com/" target="_blank" class="hover:text-gray-400">
						<i class="fab fa-instagram text-2xl"></i>
					</a>
					<a href="https://www.facebook.com/" target="_blank" class="hover:text-gray-400">
						<i class="fab fa-facebook text-2xl"></i>
					</a>
					<a href="https://wa.me/XXXXXXXXXX" target="_blank" class="hover:text-gray-400">
						<i class="fab fa-whatsapp text-2xl"></i>
					</a>
				</div>
		
				<!-- Derechos de autor -->
				<div class="mt-4 md:mt-0 text-center md:text-left">
					<p>© 2024 BarberShop. Todos los derechos reservados.</p>
				</div>
		
				<!-- Enlaces legales -->
				<div class="mt-4 md:mt-0">
					<a href="#" class="text-gray-400 hover:text-[#9b9e7d] mx-2">Aviso Legal</a>
					<a href="#" class="text-gray-400 hover:text-[#9b9e7d] mx-2">Política de Privacidad</a>
				</div>
			</div>
		</footer>
	</main>
</Layout>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
